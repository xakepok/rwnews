<?xml version="1.0" encoding="utf-8"?>
<form addrulepath="/administrator/components/com_rwnews/models/rules">
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="COM_RWNEWS_FILTER_CATEGORY_NAME"
                description="COM_RWNEWS_FILTER_CATEGORY_NAME"
                hint="COM_RWNEWS_FILTER_CATEGORY_NAME"
                autocomplete="off"
                class="js-stools-search-string"
        />
    </fields>
    <fields name="list">
        <field
                name="fullordering"
                type="list"
                label="COM_RWNEWS_FILTER_SELECT_FULL_ORDERING"
                description="COM_RWNEWS_FILTER_SELECT_FULL_ORDERING_DESC"
                onchange="this.form.submit();"
                default="title ASC"
                >
            <option value="">JGLOBAL_SORT_BY</option>
            <option value="title ASC">COM_RWNEWS_SORT_NAME_ASC</option>
            <option value="title DESC">COM_RWNEWS_SORT_NAME_DESC</option>
            <option value="published ASC">COM_RWNEWS_SORT_PUBLISHED_ASC</option>
            <option value="published DESC">COM_RWNEWS_SORT_PUBLISHED_DESC</option>
            <option value="id ASC">COM_RWNEWS_SORT_ID_ASC</option>
            <option value="id DESC">COM_RWNEWS_SORT_ID_DESC</option>
        </field>
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="0"
                label="COM_RWNEWS_FILTER_SELECT_LIMIT"
                description="COM_RWNEWS_FILTER_SELECT_LIMIT_DESC"
                onchange="this.form.submit();"
        />
    </fields>
</form>